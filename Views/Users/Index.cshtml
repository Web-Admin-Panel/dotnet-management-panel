@model IEnumerable<WebHelloWorld.Models.User>

<div class="row">
    <div class="col-md-12">
        <h2>Manage Users</h2>
        <a href="/Users/Create" class="btn btn-primary">Add New User</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Telegram</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    string usernameLink = null;
                    if (!string.IsNullOrEmpty(user.Username))
                    {
                        usernameLink = "https://t.me/" + user.Username;
                    }
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Username</td>
                        <td>
                            @if (usernameLink is not null)
                            {
                                <a href="@usernameLink" class="btn btn-info">link</a>
                            }
                        </td>
                        <td><a href="/Users/Edit/@user.UserId" class="btn btn-secondary">Edit</a></td>
                        <td><a href="/Users/Delete/@user.UserId" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
